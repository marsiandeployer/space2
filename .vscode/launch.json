{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch .json",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "env": {
                "NAMEPROMPT": "hr"
            }
        },
        {
            "name": "Flask App",
            "type": "python",
            "request": "launch",
            "module": "hababru.src.backend.main",
            "args": [],
            "env": {},
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Pytest",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "hababru/tests",
                "--deselect",
                "hababru/tests/test_api.py"
            ],
            "justMyCode": false,
            "cwd": "${workspaceFolder}"
        }
    ],
    "cwd": "${workspaceFolder}/gpts"
}